<h1>Listing counties</h1>

<table id="counties" class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

<% @counties.each do |county| %>
  <tbody>
    <tr>
      <td><%= county.name %></td>
      <td><%= link_to 'Show', county %></td>
      <td><%= link_to 'Edit', edit_county_path(county) %></td>
      <td><%= link_to 'Destroy', county, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'New County', new_county_path, class: "btn" %>
