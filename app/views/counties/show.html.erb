<div class="row">
    <div class="span4">
        <div class="page-header">
            <h1><%= @county.name %></h1>
            <h3><%= @county.fires.count %> Fire(s)</h3>
            <p id="notice"><%= notice %></p>
            <img src="http://placehold.it/400" alt="Shapefile here">
        </div>
    </div>

    <div class="span8">
        <% if @county.fires.any? %>
          <h3><%= @county.fires.count %> Fire(s)</h3>
          <table class="table table-condensed">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Acres burned</th>
                  <th>Date started</th>
                  <th>Containment</th>
                </tr>
              </thead>

        <% @county.fires.each do |fire| %>
              <tbody>
                <tr>
                  <td><%= link_to fire.name, fire %></td>
                  <td><%= number_with_delimiter(fire.acerage) %></td>
                  <td><%= fire.date %></td>
                  <td><%= fire.containment %>%</td>
                </tr>
              </tbody>
        <% end %>
          </table>
          <% else %>
          <div class="alert">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              <strong>Warning!</strong> Best check yo self, you're not looking too good.
          </div>

        <% end %>
    </div>
</div>